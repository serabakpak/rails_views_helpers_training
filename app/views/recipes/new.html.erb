<h1>New Recipe</h1>
<hr>
<!-- <form action="/recipes" method="post"> -->
<%= form_for :recipe, url: recipes_path do |f| %>
  <!-- <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"> -->
  <div class="form-group">
    <!-- <label for="recipe_name">Name</label> -->
    <%= f.label :name %>
    <!-- <input type="text" name="recipe[name]" class="form-control" id="recipe_name" placeholder="Recipe name" autofocus> -->
    <%= f.text_field :name, class: "form-control", id: "recipe_name", placeholder: "Recipe name", autofocus: true  %>
  </div>
  <div class="form-group">
    <!-- <label for="recipe_instructions">Instructions</label> -->
    <%= f.label :instructions %>
<!--     <textarea name="recipe[instructions]" class="form-control" id="recipe_instructions" placeholder="Type your recipe instructions here"></textarea> -->
    <%= f.text_area :instructions, class: "form-control", id: "recipe_instructions", placeholder: "Type your recipe instructions here" %>
  </div>
  <!-- <input type="submit" value="Save Recipe" class="btn btn-block btn-default"> -->
  <%= f.submit "Save Recipe", class: "btn btn-block btn-default" %>
<% end %>






